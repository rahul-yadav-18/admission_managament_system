
@{
    ViewBag.Title = "Video";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="row">
    <div class="text-center fs-2">Video <b class="txt-mycolor"> Management<i class="fa-solid fa-bars"></i></b></div>
    <div class="col-sm-12 mx-auto">
        <div class="row">
            <div class="col-sm-4 card ms-4 mt-5">
                <div class="card-body ">
                    <h4 class="card-title text-center" style="color:#c6003d;">ADD Video</h4>
                    <form method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputEmail" class="mt-4 ">Chose Batch :</label>
                            <select name="cbatch" required class="form-control mt-2">
                                <option value="0">Select Batch</option>
                                @foreach (var row in ViewBag.batch.Rows)
                                {
                                    <option value="@row[0]">@row[1]</option>
                                }

                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail" class="mt-4 ">Chose Video Category :</label>
                            <select name="vcategory" required class="form-control mt-2">
                                <option value="0">Select Video Category</option>
                                @foreach (var row in ViewBag.bat.Rows)
                                {
                                    <option value="@row[0]">@row[1]</option>
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail" class="mt-2 ">
                                Video Title :
                            </label>
                            <input type="text" required name="title" class="form-control  mt-2" placeholder="Enter Title of Assignment" />
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail" class="mt-2 ">
                                Video  Description :
                            </label>
                            <textarea name="description" required class="form-control mt-2" placeholder="Write the Description"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail" class="mt-2">Chose Video :</label>
                            <input type="file" name="video" required class="form-control  mt-2" />
                        </div>
                        <input type="submit" class="btn ms-4 mt-2 bg-mycolor text-light" value=" VIDEO ADD NOW" />
                    </form>
                </div>
            </div>
            <div class="col-sm-7 card ms-4 mt-5">
                <table class="table table-bordered table-striped mt-4">
                    <thead>
                        <tr>
                            <th>S No.</th>
                            <th>Batch </th>
                            <th>Video Category</th>
                            <th>Title</th>
                            <th>Description Video</th>
                            <th>Download Video</th>
                            <th>Add Date</th>
                            <th>Action</th>
                        </tr>
                        @{
                            if (ViewBag.b != null)
                            {

                                foreach (var r in ViewBag.b.Rows)
                                {
                                                <tr>
                                                    <td>@r[0]</td>
                                                    <td>@r[1]</td>
                                                    <td>@r[2]</td>
                                                    <td>@r[3]</td>
                                                    <td>@r[4]</td>
                                                    <td><a href="~/Content/video/@r[5]" target="_blank" style="text-decoration:none"><i class="fa fa-download text-bg-primary"></i></a></td>
                                                    <td>@r[6]</td>
                                                    <td><a href="?id=@r[0]"><i class="text-danger fa fa-trash"></i> </a></td>
                                                </tr>
                                }
                            }
                        }
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>



