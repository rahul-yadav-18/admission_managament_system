
@{
    ViewBag.Title = "SendFeedback";
    Layout = "~/Views/Shared/student.cshtml";
}

<h2 class="text-center txt-mycolor">
    Please write your valuable feedback Here. <br />
    कृपया अपनी बहुमूल्य प्रतिक्रिया यहाँ लिखें।
</h2>
<div class="row -5">
    <div class="col-sm-6 mx-auto mt-5">
        <form method="post">
            <b class="fs-2">Write Your Valuable Feedback Here :</b> <br />
            <textarea name="message" rows="4" class="form-control border border-2 mt-2 border-dark-subtle">

            </textarea>
            <center>
                <input type="submit" value="Send Feedback" class="mt-3 bg-mycolor text-light fw-bold" style="border-radius:10px;" />
            </center>
        </form>

    </div>
</div>

