
@{
    ViewBag.Title = "UpdateProfile";
    Layout = "~/Views/Shared/student.cshtml";
}

<div class="row">
    <div class="col-sm-8 mx-auto bg-light mt-4 pt-3 mb-3">
        <h2><center>Update Your <text class="txt-mycolor">Profile</text></center></h2>
        @{
            if (ViewBag.profiles != null)
            {
                foreach (var r in ViewBag.profiles.Rows)
                {
                    <form method="post" enctype="multipart/form-data" class="mt-5">
                        <div class="row">
                            <div class="col-sm-6">
                                <b>Name :</b><br />
                                <input type="text" name="name" value="@r[0]" class="form-control mt-1 mb-3" />
                            </div>
                            <div class="col-sm-6">
                                <b>Course :</b><br />
                                <select name="course" class="form-control mt-1 mb-3">
                                    <option>@r[6]</option>
                                    <option>B.tech (C.S)</option>
                                    <option>B.tech (i.t)</option>
                                    <option>Diploma</option>
                                    <option>BCA</option>
                                    <option>MCA</option>
                                </select>

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <b>Mobile No :</b><br />
                                <input type="number" value="@r[3]" name="mobno" class="form-control mt-1 mb-3" />
                            </div>
                            <div class="col-sm-6">
                                <b>College :</b><br />
                                <input type="text" value="@r[5]" name="college" class="form-control mt-1 mb-3" />
                            </div>
                        </div>
                     <div class="row" >
                            <div class="col-sm-6">
                                <b>Profile Picture :</b><br />
                                <input type="file" name="pic" required class="form-control mt-1 mb-3" />
                            </div>

                        </div>
                        <center><button type="submit" class="btn bg-mycolor text-light fw-bold">Update</button></center>
                    </form>
                }
            }
        }
    </div>
</div>

